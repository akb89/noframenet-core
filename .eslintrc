{
  "extends": "airbnb",
  "env": {
    
    "node": true,
    "mocha": true
  },
  "rules": {
    // Allow _id on mongo id attributes
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    // Tolerate String extension for hashcode needed for Set
    "no-extend-native": [
      "error",
      {
        "exceptions": [
          "String"
        ]
      }
    ],
    // Those are not typos and are used for hashcode definition
    "no-bitwise": [
      "error",
      {
        "allow": [
          "<<",
          "|="
        ]
      }
    ],
    // Allow devDependencies for tests
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js"
        ]
      }
    ],
    // Allow comment decoration with ****
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": ["*"]
      }
    ],
    // Allow uppercase functions with mongoose
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["mongoose.Schema", "mongoose.Types.ObjectId"]
      }
    ],
    // Ignore unused-var error message on chai.should()
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "should"
      }
    ]
  }
}
